package embox.kernel.thread

module core {
	source "core.c"

	depends sched, sync, embox.kernel.task_api

	depends embox.arch.context
	make flags "-I$(SRC_DIR)/compat/posix/include"
}

module sched {
	source "sched.c"

	depends embox.kernel.timer.timer_api // for timeslices support
	depends embox.arch.context // context_switch
	depends embox.kernel.critical
	depends embox.kernel.thread.sched_policy.api

	make flags "-I$(SRC_DIR)/compat/posix/include"
}

