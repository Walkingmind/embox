package embox.net.lib

module bootp {
	source "bootp.c"

	depends embox.lib.LibC
}

module dns {
	source "dns.c"
	option string nameserver="10.0.0.11"

	depends embox.compat.posix.net.socket
	depends embox.lib.LibC
}

module getifaddrs {
	source "getifaddrs.c"
	option number amount_ifaddrs=3

	depends embox.mem.pool
	depends embox.net.core
}

module ntp {
	source "ntp.c"
	
	depends embox.kernel.time.timekeeper
	depends embox.lib.LibC
}

module pop3 {
	source "pop3.c"

	depends embox.compat.posix.net.gethostbyname
	depends embox.compat.posix.net.socket
	depends embox.lib.LibC
}

module smtp {
	source "smtp.c"

	depends embox.lib.LibCMisc
	depends embox.compat.posix.net.gethostbyname
	depends embox.compat.posix.net.socket
	depends embox.lib.LibC
}
