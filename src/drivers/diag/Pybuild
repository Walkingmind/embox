    'mem_diag',
    implements = ['diag_api'],

    sources = ["mem_diag.c"],

)

module (
    'no_diag',
    implements = ['diag_api'],

    sources = ["no_diag.c"],

)

module (
    'i8250',
    implements = ['diag_api'],

    sources = ["8250.c"],

    options = [
        Integer('baud_rate'),
    ]
)

