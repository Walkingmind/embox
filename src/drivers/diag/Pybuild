    'apbuart',
    implements = ['diag_api'],

    sources = ["apbuart.c"],

    options = [
        Integer('baud_rate'),
    ]
)

module (
    'at91_uart',
    implements = ['diag_api'],

    sources = ["at91_uart.c"],

    options = [
        Integer('baud_rate'),
    ]
)

