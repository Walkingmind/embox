
package('embox.mem')

interface(
    'heap_api',
    options = [
        Integer('heap_size', default = 0x100000)
    ]
)

module (
    'base_heap',

    options = [
        Integer('heap_size', default = 0x100000)
    ]
)

module (
    'heap_bm'
    implements = 'heap_api', 

    sources = ["heap_bm.c"],

    depends = [
        'page_api', 
	'heap_lds'
    ]

)

module (
    'heap_simple',
    implements = ['heap_api'],

    sources = ["heap_simple.c"],
    
    depends = ['heap_lds'],

) 
