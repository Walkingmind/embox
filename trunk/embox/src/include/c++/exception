#ifndef EXCEPTION_
#define EXCEPTION_

#if __EXCEPTIONS==0
#include <standalone_exception>
#elif __EXCEPTIONS==1
#include_next <exception>
#else
#error __EXCEPTIONS macro should be defined to either 1 or 0
#endif

#endif /* EXCEPTION_ */
