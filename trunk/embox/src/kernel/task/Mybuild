package embox.kernel.task

@DefaultImpl(single)
abstract module api { 
	option number max_resource_size = 1024
}

module single extends api {
	source "single.c"
	depends kernel_task
}


module multi extends api {
	source "multi.c"
	depends kernel_task
	
	option number tasks_quantity = 20
	
	depends task_table

	@NoRuntime depends embox.kernel.thread.core
}

module task_environment { }

module kernel_task {
	source "common.c"
}



module task_table {
	source "task_table.c"
	depends embox.util.idx_table
}

module std_signal { 
	@IncludePath("$(SRC_DIR)/compat/posix/include")
	source "std_signal.c"
	depends signal_common
}

module rt_signal { 
	@IncludePath("$(SRC_DIR)/compat/posix/include")
	source "rt_signal.c"
	depends signal_common
	depends embox.mem.objalloc
}

module signal_common {
	source "signal.c"
}


module idx_table extends task_environment {

	option number task_res_quantity = 64
	source "index_desc.c"
	depends embox.util.idx_table
	depends api
}

module errno {
	source "errno.c"
	depends api
}
