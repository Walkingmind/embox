package embox.kernel.sched.sched_policy

@DefaultImpl(nosched)
abstract module api { 	
}

module nosched extends api {
	source "nosched.h"
	depends embox.kernel.thread.current.api
}

module simple_queue extends api {
	source "simple_queue.c", "simple_queue.h"
	
	option number tick_interval = 100
	
	/*uses timer_set */
	depends embox.kernel.timer.sys_timer
	depends queue.api
}


/* Meta modules for compatibility. Remove them? */
module priority_based {
	depends simple_queue
	depends queue.prioq
}

module priority_based_smp {
	depends simple_queue
	depends queue.prioq2
}

module trivial {
	depends simple_queue
	depends queue.list
}
