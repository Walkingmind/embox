package embox.net

module af_inet {
	source "af_inet.c", "protocol.c", "ipconfig.c"
	depends embox.net.socket
	depends embox.net.raw_sock
	depends route
	make flags "-I$(SRC_DIR)/compat/posix/include"
	make flags "-I$(SRC_DIR)/compat/linux/include"
}

module route {
	source "route.c"
}

module arp_queue {
	source "arp_queue.c"
}

module arp {
	source "arp.c"
	depends embox.net.neighbour, arp_queue
	make flags "-I$(SRC_DIR)/compat/posix/include"
	make flags "-I$(SRC_DIR)/compat/linux/include"
}

module ipv4 {
	source "ip_input.c", "ip_options.c", "ip_output.c", "ip_fragment.c"
	make flags "-I$(SRC_DIR)/compat/posix/include"
	make flags "-I$(SRC_DIR)/compat/linux/include"
}

module icmp {
	source "icmp.c"
	depends af_inet
	make flags "-I$(SRC_DIR)/compat/posix/include"
	make flags "-I$(SRC_DIR)/compat/linux/include"
}

module udp {
	source "udp.c"
	make flags "-I$(SRC_DIR)/compat/posix/include"
	make flags "-I$(SRC_DIR)/compat/linux/include"
}

module tcp {
	source "tcp.c"
	make flags "-I$(SRC_DIR)/compat/posix/include"
	make flags "-I$(SRC_DIR)/compat/linux/include"
}

module raw_sock {
	source "raw_sock.c"
	depends embox.net.socket
	make flags "-I$(SRC_DIR)/compat/posix/include"
	make flags "-I$(SRC_DIR)/compat/linux/include"
}
