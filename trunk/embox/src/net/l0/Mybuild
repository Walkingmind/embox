package embox.net

@DefaultImpl(net_entry)
abstract module entry_api {
}

module net_entry extends entry_api {
	source "net_entry.c"

	depends net_rx
	depends skbuff
}

module net_rx {
	source "net_rx.c"

	depends net_crypt_api
	depends skbuff
	depends packet
	depends af_packet /* make af_packet socket receive incoming packets */
	depends embox.compat.linux.LibLinux
	depends embox.framework.LibFrameworkNet
}

module net_tx {
	source "net_tx.c"

	depends net_crypt_api
	depends skbuff
	depends af_packet /* make af_packet socket receive outcoming packets */
	depends neighbour
}

@DefaultImpl(net_no_crypt)
abstract module net_crypt_api {
}

module net_no_crypt extends net_crypt_api {
	source "net_no_crypt.c"
}

