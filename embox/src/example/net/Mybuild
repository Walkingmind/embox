package embox.example.net

module hostinfo {
	source "hostinfo.c"

	depends embox.compat.posix.net.gethostbyname
	depends embox.compat.posix.net.gethostbyaddr
	depends embox.compat.posix.util.getopt
	depends embox.lib.LibC
	depends embox.framework.LibFramework
}

module echo_server {
	source "echo_server.c"

	depends embox.compat.posix.net.socket
	depends embox.lib.LibC
	depends embox.compat.posix.LibPosix
	depends embox.framework.LibFramework
}

module checkopts {
	source "checkopts.c"

	depends embox.compat.posix.net.socket
	depends embox.lib.LibC
	depends embox.framework.LibFramework
}

module receiver {
	source "receiver.c"

	depends embox.compat.posix.net.socket
	depends embox.prom.printf
	depends embox.framework.LibFramework
}

module sender {
	source "sender.c"

	depends embox.compat.posix.net.socket
	depends embox.compat.posix.LibPosix
	depends embox.framework.LibFramework
}

module grid {
	source "grid_sched.c"

	depends embox.kernel.thread.core
	depends embox.compat.posix.net.socket
	depends embox.compat.posix.LibPosix
	depends embox.framework.LibFramework
}
