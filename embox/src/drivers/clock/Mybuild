package embox.driver.clock

module mb_timer extends embox.arch.clock {
	source "mb_timer.c"
	depends embox.kernel.irq
	depends embox.arch.system
}

module pit extends embox.arch.clock {
    @IncludePath("$(SRC_DIR)/compat/posix/include")
	source "pit.c"
	depends embox.kernel.irq
}

module gptimer extends embox.arch.clock {
	source "gptimer.c"
	depends embox.kernel.irq
	depends embox.driver.ambapp_api
	depends embox.arch.system
}

module at91_pitc extends embox.arch.clock {
	source "at91_pitc.c"
	depends embox.kernel.irq
}

module systick_timer extends embox.arch.clock {
	source "systick_timer.c"
}
