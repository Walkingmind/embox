package embox.driver.diag

module diag_common {
	source "diag_common.c"
}

@DefaultImpl(no_diag_video)
abstract module diag_video_api {
}

module no_diag_video extends diag_video_api {
	source "no_diag_video.c"
	depends diag_common
}

module vga extends diag_video_api {
	source "vga.c"
	depends diag_common
}

abstract module diag_api {
}

module apbuart extends diag_api {
	option number baud_rate

	source "apbuart.c"
	depends diag_common
}

module at91_uart extends diag_api {
	option number baud_rate

	source "at91_uart.c"
	depends diag_common
}

module mem_diag extends diag_api {
	source "mem_diag.c"
	depends diag_common
	depends embox.lib.LibC
}

module no_diag extends diag_api {
	source "no_diag.c"
	depends diag_common
}

module i8250 extends diag_api {
	option number baud_rate
	source "8250.c"
	depends diag_common
}

module vga_early extends diag_api {
	source "vga_early.c"

	depends diag_common
	depends embox.driver.video.vga
	depends embox.driver.keyboard
}

module xuartlite extends diag_api {
	option number xuartlite_base

	source "xuartlite.c"
	depends diag_common
}

module stm32_usart extends diag_api {
	source "stm32_usart.c"
	depends diag_common
	depends embox.driver.gpio.stm32
}

module pic32mx_uart extends diag_api {
	source "pic32mx_uart.c"
	depends diag_common
}

module ns16550 extends diag_api {
	source "ns16550.c"
	depends diag_common
}
