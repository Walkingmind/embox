package embox.driver.serial

/* FIXME:
 * Unused files: skyeye_uart.c
 */

abstract module serial {
}

module apbuart extends serial {
	option number baud_rate

	source "apbuart.c"

	depends embox.lib.LibC
	depends embox.driver.ambapp_api
	depends embox.kernel.irq
	depends embox.fs.driver.devfs
}

module at91_uart extends serial {
	option number baud_rate

	source "at91_uart.c"
}

module serial_port extends serial {
	option number baud_rate

    @IncludePath("$(SRC_DIR)/compat/posix/include")
	source "serial_port.c"

	depends embox.kernel.irq
	depends embox.util.LibUtil
}

module xuartlite extends serial {
	source "xuartlite.c"
}
