package embox.kernel.time

module clock_source {
	@NumConstraint(ge=1)
	option number clocks_quantity = 4

	source "clock_source.c"
}

module kernel_time {
	@IncludePath("$(SRC_DIR)/compat/posix/include")
	source "ktime.c"
	depends embox.kernel.timer.itimer
	depends embox.arch.clock
}

module jiffies {
	source "jiffies.c"
	depends embox.arch.clock
}

module timer {
	source "timer.c"
	depends jiffies
	depends embox.arch.clock
}
