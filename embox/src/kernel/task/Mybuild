package embox.kernel.task

module api { 
	option number max_resource_size = 256
	depends embox.kernel.thread.core
	depends api_impl
}

abstract module api_impl { }

module task_environment { }

module multi extends api_impl {
	option number tasks_quantity = 20

	source "multi.c"
	source "common.c"
	
	depends task_table

	depends idx_table /* just for now */
	depends embox.kernel.thread.sched

}

module task_table {
	source "task_table.c"
	depends embox.util.idx_table
}


module single extends api_impl {
	@IncludePath("$(SRC_DIR)/compat/posix/include")
	source "single.c"

	source "common.c"

	depends idx_table /* just for now */
}

module idx_table extends task_environment {
	source "index_desc.c"
	depends embox.util.idx_table
}

module signal { 
	source "signal.c"
}
