package embox.kernel.task

abstract module api { }

module multi extends api {
	option number tasks_quantity = 20

	source "multi.c"
	source "common.c", "index_desc.c"

	depends embox.kernel.thread.sched
	depends embox.driver.virtual.diag_device

}

module single extends api {
	@IncludePath("$(SRC_DIR)/compat/posix/include")
	source "single.c"
	source "common.c", "index_desc.c"
	depends embox.driver.virtual.diag_device
}
