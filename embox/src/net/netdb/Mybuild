package embox.net

module netdb {
	source "hostent_api.c", "hostent_api.h"
	option number max_name_len=32
	option number max_aliases_num=10
	option number max_addr_len=4 /* now only ipv4 is used */
	option number max_addrs_num=10
	depends embox.lib.LibC

	source "gethostent.c"
	option string path_to_hosts="/hosts"
	depends embox.lib.LibC

	source "gethostbyname.c"
	depends embox.lib.LibC
}

