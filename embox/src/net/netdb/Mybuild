package embox.net

module netdb {
	source "hostent_api.c", "hostent_api.h"
	option number max_name_len=256
	option number max_aliases_num=40
	option number max_addr_len=16
	option number max_addrs_num=40
	depends embox.lib.LibC

	source "gethostent.c"
	option string path_to_hosts="/hosts"
	depends embox.lib.LibC

	source "gethostbyname.c"
	depends embox.lib.LibC

	source "dns.c"
	option string dns_nameserver="8.8.8.8"
	depends embox.net.socket
	depends embox.lib.LibC
	depends embox.mem.heap_api

	source "herror.c"
	depends embox.lib.LibC
}

