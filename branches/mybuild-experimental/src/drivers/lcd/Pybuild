
package('embox.driver.lcd')

module(
	'hd44780',

  	options = [
		String('control_port'),
 		Integer('reg_select_pin'),
 		Integer('rw_pin'),
 		Integer('clock_pin'),
 		String('data_port'),
 		Integer('data_pins_offset'),
 		Integer('line_n'),
 		Integer('line_width'),
	],

 	sources = [
		'hd44780.c',
	],

 	depends = [
		'embox.driver.gpio.api',
	],

) 

#include example (suitable for stm32vl)

	#@Runlevel(2) include embox.driver.lcd.hd44780(
		#line_n=2,
		#line_width=16,

		#control_port="GPIO_C",	
		#reg_select_pin=0,
		#rw_pin=1,
		#clock_pin=2,
		
		#data_port="GPIO_A",
		#data_pins_offset=0)


