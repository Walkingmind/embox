package embox.arch

module system {
	option number core_freq
}

abstract module cpu {
}

@Mandatory
@DefaultImpl(no_interrupt)
abstract module interrupt_api { }

module no_interrupt extends interrupt_api {
	// TODO make a stub for IPL.
}

abstract module interrupt extends interrupt_api {
	@Generated(script="echo '#define INTERRUPT_IMPLEMENTED'")
	source "interrupt_impl.h"
}

abstract module clock {
}

abstract module context {
}

abstract module libarch {
}

abstract module locore {
}

abstract module entry {
}

abstract module boot {
}

abstract module lds {
}

abstract module stackframe {
}
