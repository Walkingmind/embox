sudo $QEMU -s -kernel $IMAGE \
	-net nic,model=ne2k_pci,macaddr=AA:BB:CC:DD:EE:02 \
	-net tap,ifname=tap0,script=start_script_my,downscript=stop_script_my -drive file=/home/user/hdc.img,media=disk -s -S -nographic $@
