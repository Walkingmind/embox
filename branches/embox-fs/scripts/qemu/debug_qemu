#!/bin/bash

QEMU=~/qemu-1.0.1/i386-softmmu/qemu-system-i386

IMAGE=../../build/base/bin/embox

TAP_DEV=$(tunctl -b)
echo $TAP_DEV > tap_dev
sync
whoami
echo $TAP_DEV
