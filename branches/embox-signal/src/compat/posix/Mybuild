package embox.compat.posix

module LibPosix {
	depends embox.compat.posix.fs.All
	depends embox.compat.posix.idx.All
	depends embox.compat.posix.net.All
	depends embox.compat.posix.proc.All
	depends embox.compat.posix.passwd
	depends embox.compat.posix.utmp_api
	depends embox.compat.posix.util.All
	depends pthreads
	depends sched
	depends termios
}

static module pthreads {
	source "pthread.c"
	source "pthread_key.c"
	source "pthread_cond.c"
	source "pthread_mutex.c"
	source "pthread_cancel.c"
	
	depends embox.kernel.thread.core
	depends embox.kernel.thread.sync
}

static module sched {
	source "sched_posix.c"
}

static module termios {
	source "termios.c"
	depends embox.driver.tty.tty
}

static module semaphore {
	source "semaphore.c"
}
