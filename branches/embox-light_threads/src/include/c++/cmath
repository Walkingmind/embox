#ifndef CMATH_
#define CMATH_

#include <math.h>

namespace std {
	using ::floor;
	inline float floor(float x) { return floorf(x); }
	inline long double floor(long double x) { return floorl(x); }
	using ::pow;
	inline float pow(float x, float y) { return powf(x, y); }
	inline long double pow(long double x, long double y) { return powl(x, y); }
	using ::ceil;
	using ::acos;
	using ::fmod;
	using ::modf;
	using ::asin;
	using ::frexp;
	using ::atan;
	using ::ldexp;
	using ::atan2;
	using ::fabs;
	using ::cos;
	using ::sin;
	using ::tan;
	using ::cosh;
	using ::tanh;
	using ::exp;
	using ::log;
	using ::sinh;
	using ::log10;
	using ::sqrt;

} // namespace std

#endif // CMATH_
