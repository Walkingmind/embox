package embox.cmd.fs

@Cmd(name = "cp",
	help = "Copy file",
	man = '''
		NAME
			cp - copy files and directories
		SYNOPSIS
			cp [-h] [-r|-R] SOURCE DEST
			cp [-h] [-r|-R] SOURCE DIR
		DESCRIPTION
			Copy SOURCE to DEST. If DIR specified as destination, 
			basename of source will be used as DEST basename.

			-r 	copy SOURCE directory recursively


		AUTHOR
			Roman Evstifeev
			Anton Kozlov
	''')
module cp {
	source "cp.c"

	depends embox.compat.libc.LibC
	depends embox.compat.posix.LibPosix
	depends embox.framework.LibFramework
}
