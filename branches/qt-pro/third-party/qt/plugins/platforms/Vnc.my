package third_party.qt.plugin.platform

@Build(script="TARGET=$(EXTERNAL_BUILD_DIR)/third_party/qt/core/qt/source/src/plugins/platforms/vnc; $(EXTERNAL_MAKE_PRO)")
@BuildDepends(third_party.qt.core)
module vnc {
	@AddPrefix("^BUILD/extbld/third_party/qt/core/qt/build/plugins/platforms")
	source "libqvncgraphicssystem.a"

	@IncludePath("$(EXTERNAL_BUILD_DIR)/third_party/qt/core/qt/build/include")
	@IncludePath("$(EXTERNAL_BUILD_DIR)/third_party/qt/core/qt/build/include/QtCore")
	@IncludePathBefore("$(ROOT_DIR)/build/stlport/include/stlport")
	@IncludePath("$(ROOT_DIR)/third-party/STLport/include")
	@IncludePath("$(ROOT_DIR)/build/qpid/include")
	source "vnc.cpp"

	@NoRuntime depends third_party.qt.core
	@NoRuntime depends third_party.qt.plugin.platform.minimal
}
