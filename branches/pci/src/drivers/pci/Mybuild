package embox.driver

module pci {
	option number dev_quantity = 32
	source "pci.c", "pci_repo.c", "pci_utils.c", "pci_driver.c"

	depends embox.mem.pool
	depends embox.kernel.irq
	depends embox.util.LibUtil
	@NoRuntime depends embox.driver.pci_chip.pci_chip
}

module pci_bios {
	option number memory
	option number memory_sz
	source "pci_bios.c"

	depends embox.mem.page_api
}
